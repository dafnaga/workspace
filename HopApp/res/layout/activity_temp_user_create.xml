<RelativeLayout xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TempUserCreateActivity" xmlns:android="http://schemas.android.com/apk/res/android">
    <TextView android:id="@+id/user_create_label_first_name"
        android:text="First name:"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"/>
    <EditText android:id="@+id/user_create_edit_text_first_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/user_create_label_first_name"></EditText>    
    <TextView android:id="@+id/user_create_label_last_name"
        android:text="Last name:"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_below="@id/user_create_edit_text_first_name" />
    <EditText android:id="@+id/user_create_edit_text_last_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/user_create_label_last_name"></EditText>    
    <Button android:id="@+id/user_create_button_create"
        android:text="Create"
        android:onClick="buttonClickCreate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/user_create_edit_text_last_name"/>
</RelativeLayout>